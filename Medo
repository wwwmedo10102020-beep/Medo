    <script>
        /* --- Ø§Ù„Ø¨Ø±Ù…Ø¬Ø© (JS) --- */
        const secret = "7/6/2003";

        function verify() {
            const val = document.getElementById('passCode').value;
            if(val === secret) {
                document.getElementById('loginPage').style.display = 'none';
                document.getElementById('mainApp').style.display = 'block';
            } else {
                alert("Ø®Ø·Ø£ ÙÙŠ ÙƒÙ„Ù…Ø© Ø§Ù„Ø³Ø±!");
            }
        }

        function toggleMenu() {
            document.getElementById('sidebar').classList.toggle('active');
        }

        function navTo(sectionId) {
            document.querySelectorAll('section').forEach(s => s.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
            toggleMenu();
        }

        function updateSite() {
            const link = document.getElementById('linkInput').value;
            const type = document.getElementById('typeInput').value;
            const msg = document.getElementById('msgInput').value;
            const container = document.getElementById('mediaContainer');

            // Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù…Ø­ØªÙˆÙ‰
            if(link) {
                const element = document.createElement('div');
                if(type === 'img') {
                    element.innerHTML = `<img src="${link}" onclick="window.open(this.src)">`;
                } else {
                    element.innerHTML = `<video src="${link}" controls></video>`;
                }
                container.appendChild(element);
                alert("ØªÙ…Øª Ø¥Ø¶Ø§ÙØ© Ø§Ù„ÙˆØ³Ø§Ø¦Ø·!");
            }

            // ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø±Ø³Ø§Ù„Ø©
            if(msg) {
                document.getElementById('letterDisplay').innerText = msg;
            }

            // ØªØµÙÙŠØ± Ø§Ù„Ø­Ù‚ÙˆÙ„
            document.getElementById('linkInput').value = "";
            document.getElementById('msgInput').value = "";
        }
    </script>
